<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

  <changeSet id="1753859986242-1" author="gregory">
    <createTable tableName="sys_group">
      <column name="id" type="varchar(255)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="parent_id" type="varchar(255)"/>
      <column name="description" type="text"/>
      <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
      <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
    </createTable>
  </changeSet>

  <changeSet id="1753859986242-2" author="gregory">
    <createTable tableName="sys_role">
      <column name="id" type="varchar(255)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="description" type="text"/>
      <column name="enabled" type="boolean" defaultValue="true">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
      <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
    </createTable>
  </changeSet>

  <changeSet id="1753859986242-3" author="gregory">
    <createTable tableName="client_scope">
      <column name="id" type="varchar(255)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="description" type="text"/>
      <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
      <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
    </createTable>
  </changeSet>

  <changeSet id="1753859986242-4" author="gregory">
    <createTable tableName="user_entity">
      <column name="id" type="varchar(255)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="username" type="varchar(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="password" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="first_name" type="varchar(255)"/>
      <column name="last_name" type="varchar(255)"/>
      <column name="email" type="varchar(255)">
        <constraints unique="true"/>
      </column>
      <column name="phone_number" type="varchar(50)"/>
      <column name="picture" type="varchar(255)"/>
      <column name="enabled" type="boolean" defaultValue="true">
        <constraints nullable="false"/>
      </column>
      <column name="status" type="varchar(50)" defaultValue="normal">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
      <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
    </createTable>

    <createIndex indexName="idx_user_entity_username" tableName="user_entity">
      <column name="username"/>
    </createIndex>
  </changeSet>

  <changeSet id="1753859986242-5" author="gregory">
    <createTable tableName="user_role_mapping">
      <column name="user_id" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="role_id" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey columnNames="user_id, role_id" tableName="user_role_mapping"
                   constraintName="pk_user_role_mapping"/>

    <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_role_mapping"
                             constraintName="fk_user_role_mapping_user" deferrable="false"
                             initiallyDeferred="false"
                             referencedColumnNames="id" referencedTableName="user_entity"/>

    <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="user_role_mapping"
                             constraintName="fk_user_role_mapping_role" deferrable="false"
                             initiallyDeferred="false"
                             referencedColumnNames="id" referencedTableName="sys_role"/>
  </changeSet>

  <changeSet id="1753859986242-6" author="gregory">
    <createTable tableName="user_group_membership">
      <column name="user_id" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="group_id" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey columnNames="user_id, group_id" tableName="user_group_membership"
                   constraintName="pk_user_group_membership"/>

    <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_group_membership"
                             constraintName="fk_user_group_membership_user"
                             deferrable="false"
                             initiallyDeferred="false"
                             referencedColumnNames="id" referencedTableName="user_entity"/>

    <addForeignKeyConstraint baseColumnNames="group_id" baseTableName="user_group_membership"
                             constraintName="fk_user_group_membership_group"
                             deferrable="false"
                             initiallyDeferred="false"
                             referencedColumnNames="id" referencedTableName="sys_group"/>
  </changeSet>

  <changeSet id="1753859986242-7" author="gregory">
    <createTable tableName="scope_mapping">
      <column name="role_id" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="scope_id" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey columnNames="role_id, scope_id" tableName="scope_mapping"
                   constraintName="pk_scope_mapping"/>

    <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="scope_mapping"
                             constraintName="fk_scope_mapping_role"
                             deferrable="false"
                             initiallyDeferred="false"
                             referencedColumnNames="id" referencedTableName="sys_role"/>

    <addForeignKeyConstraint baseColumnNames="scope_id"
                             baseTableName="scope_mapping"
                             constraintName="fk_scope_mapping_scope"
                             deferrable="false"
                             initiallyDeferred="false"
                             referencedColumnNames="id" referencedTableName="client_scope"/>
  </changeSet>

</databaseChangeLog>
